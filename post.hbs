{{!< default}}

{{#post}}

<article class="post">

    <header>
        <h1>{{title}}</h1>
    </header>

    <div class="meta">
        <div class="author">
            <div class="t">
                <img src="{{author.image}}" alt="{{author.name}}" >
            </div>
            <span>
                {{author}}
            </span>
        </div>
        <div class="time">
            <div class="t">
                <svg class="icon" aria-hidden="true">
                    <use xlink:href="#icon-rili"></use>
                </svg>
            </div>
            <time datetime="{{date format="YYYY-MM-DD"}}">
                {{date format="YYYY-MM-DD"}}
            </time>
        </div>
    </div>

    <main>
        {{content}}
    </main>

</article>

{{/post}}

<article class="comment">
    <div id="disqus_thread"></div>
</article>